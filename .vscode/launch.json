{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Client (Watch)",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "outFiles": [
                "${workspaceRoot}/out/extension.js",
                "${workspaceRoot}/out/server.js",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "autoAttachChildProcesses": true,
            "preLaunchTask": {
                "type": "npm",
                "script": "watch",
            },
            "request": "launch",
            "type": "extensionHost",
        },
        {
            "name": "Gulp (Watch)",
            "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
            "env": {
                "NODE_ENV": "development"
            },
            "args": [
                "default"
            ],
            "outFiles": [
                "${workspaceRoot}/gulpfile.js",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "request": "launch",
            "type": "node",
        },
        {
            "name": "Antlr UC Macro Test",
            "debugServer": 6020,
            "input": "grammars/test/Macro.uci",
            "grammar": "grammars/UCPreprocessorParser.g4",
            "startRule": "macroProgram",
            "trace": true,
            "visualParseTree": true,
            "request": "launch",
            "type": "antlr-debug",
        },
        {
            "name": "Antlr UC Test",
            "debugServer": 6020,
            "input": "${workspaceFolder}/grammars/examples/classes/test.uc",
            "grammar": "grammars/UCParser.g4",
            "startRule": "program",
            "trace": true,
            "visualParseTree": true,
            "request": "launch",
            "type": "antlr-debug",
        }
    ],
    "compounds": [
        {
            "name": "Extension Development",
            "configurations": [
                "Launch Client (Watch)",
                "Gulp (Watch)"
            ]
        }
    ]
}

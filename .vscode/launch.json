{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Client (Build)",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "outFiles": [
                "${workspaceRoot}/out/extension.js",
            ],
            "sourceMaps": true,
            "autoAttachChildProcesses": true,
            "preLaunchTask": {
                "type": "npm",
                "script": "build",
            },
            "request": "launch",
            "type": "extensionHost",
        },
        {
            "name": "Launch Client (Watch)",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "outFiles": [
                "${workspaceRoot}/out/extension.js",
            ],
            "sourceMaps": true,
            "autoAttachChildProcesses": true,
            "preLaunchTask": {
                "type": "npm",
                "script": "watch",
            },
            "request": "launch",
            "type": "extensionHost",
        },
        {
            "name": "Attach to Server",
            "port": 6010,
            "outFiles": [
                "${workspaceRoot}/out/server.js",
                "!${workspaceRoot}/out/vendor.js"
            ],
            "sourceMaps": true,
            "smartStep": true,
            "restart": true,
            "request": "attach",
            "type": "node",
        },
        {
            "name": "Antlr UC Macro Test",
            "debugServer": 6020,
            "input": "grammars/test/Macro.uci",
            "grammar": "grammars/UCPreprocessorParser.g4",
            "startRule": "macroProgram",
            "trace": true,
            "visualParseTree": true,
            "request": "launch",
            "type": "antlr-debug",
        },
        {
            "name": "Antlr UC Test",
            "debugServer": 6020,
            "input": "${workspaceFolder}/grammars/examples/classes/FunctionCallTest.uc",
            "grammar": "grammars/UCParser.g4",
            "startRule": "program",
            "trace": true,
            "visualParseTree": true,
            "request": "launch",
            "type": "antlr-debug",
        },
    ],
    "compounds": [
        {
            "name": "Client + Server",
            "configurations": [
                "Launch Client (Watch)",
                "Attach to Server"
            ]
        }
    ]
}

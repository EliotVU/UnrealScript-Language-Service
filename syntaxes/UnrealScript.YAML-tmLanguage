          - include: '#structdefaultproperties'
          - include: '#directive'
        end: (?>\})
        endCaptures:
          '0':
            name: punctuation.curlybrace.close.uc
    end: (\;)

  var-declaration:
    name: meta.definition.variable.uc
    begin: \b((?i)var)\b
    beginCaptures:
